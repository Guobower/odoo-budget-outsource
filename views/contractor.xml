<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
    <!--START CONTRACTOR VIEWS-->
        <!--CONTRACTOR FORM VIEW-->
        <record model="ir.ui.view" id="view_form_contractor">
            <field name="name">Contractor</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Partners">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="action"
                                icon="fa-list-ul">
                                <field string="Line Details" name="total_po_line_detail" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="action"
                                icon="fa-users">
                                <field string="Resources" name="total_resource" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="action"
                                icon="fa-user-times">
                                <field string="Non Mobilized" name="total_non_mobilize" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="action"
                                icon="fa-question-circle">
                                <field string="Approvals" name="total_approval" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="action"
                                icon="fa-pencil-square-o">
                                <field string="Purchase Orders" name="total_po" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="action"
                                icon="fa-check-square-o">
                                <field string="Invoiced" name="total_invoice" widget="statinfo"/>
                            </button>

                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                </div>
                                <field name="website" widget="url" placeholder="e.g. www.etisalat.com"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Contacts">
                                <field name="contact_ids" mode="kanban">
                                    <kanban>
                                        <field name="name"/>
                                        <field name="job_position"/>
                                        <field name="email"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_kanban_global_click o_res_partner_kanban">
                                                    <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                                    <div class="o_kanban_image">
                                                        <img t-att-src="_s + &quot;/base/static/src/img/avatar.png&quot;"/>
                                                    </div>
                                                    <div class="oe_kanban_details">
                                                        <div><strong><field name="name"/></strong></div>
                                                        <div><field name="email"/></div>
                                                        <div><field name="job_position"/></div>
                                                        <div><field name="is_spoc"/></div>
                                                        <div><field name="phone"/></div>
                                                        <div><field name="mobile"/></div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                            <page string="Unit Rates">
                                <field name="unit_rate_ids">
                                    <tree editable="bottom">
                                        <field name="position"/>
                                        <field name="level_1"/>
                                        <field name="level_2"/>
                                        <field name="level_3"/>
                                        <field name="level_4"/>
                                        <field name="percent"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Approvals">
                                <field name="approval_ids"/>
                            </page>
                            <page string="Purchase Orders">
                                <field name="po_ids"/>
                            </page>
                            <page string="Resources">
                                <field name="resource_ids" context="{'form_view_ref': 'outsource.view_form_resource'}"/>
                            </page>
                            <page string="Positions">
                                <field name="po_line_detail_ids" readonly="0"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!--CONTRACTOR KANBAN VIEW-->
        <record model="ir.ui.view" id="view_kanban_contractor">
            <field name="name">Contractor</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_res_partner_kanban">
                                <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                <div class="o_kanban_image">
                                    <img t-att-src="_s + &quot;/base/static/src/img/company_image.png&quot;"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="oe_partner_heading"><field name="name"/></strong>
                                    <div class="oe_kanban_partner_links"/>
                                    <div><field name="website"/></div>
                                    <!--<div><field name="street"/></div>-->
                                    <!--<div><field name="street2"/></div>-->
                                    <div><field name="city"/></div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
          </record>
    <!--END CONTRACTOR VIEWS-->

    <!--START ACTIONS-->
        <!--Contractor Action-->
        <record model="ir.actions.act_window" id="action_contractor">
            <field name="name">Contractor</field>
            <field name="res_model">res.partner</field>
            <field name="domain">[('is_contractor','=',True)]</field>
            <field name="context">{'default_is_contractor': True}</field>
        </record>

        <!--Override View-->
        <!--Override Default View-->
        <record model="ir.actions.act_window.view" id="action_contractor_view_kanban">
            <field name="sequence" eval="1"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_kanban_contractor"/>
            <field name="act_window_id" ref="action_contractor"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_contractor_view_form">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_contractor"/>
            <field name="act_window_id" ref="action_contractor"/>
        </record>
    <!--END ACTIONS-->
    </data>
</openerp>