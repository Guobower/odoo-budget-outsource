<?xml version="1.0" encoding="utf-8"?>

<openerp>
  <data>
<!--START ACTIONS-->
    <!--Purchase Order Collection Action-->
    <act_window
        id="action_purchase_order_collection"
        name="Purchase Order Collection"
        res_model="outsource.purchase.order.collection"
        view_mode="tree,form,pivot"/>

<!--END ACTIONS-->

<!--START PURCHASE ORDER VIEWS-->
    <!--Purchase Order Tree View-->
    <record model="ir.ui.view" id="view_tree_purchase_order_collection">
        <field name="name">Purchase Order Collection</field>
        <field name="model">outsource.purchase.order.collection</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="po_num"/>
                <field name="contractor_id"/>
                <!--<field name="type"/>-->
                <!--<field name="task_num"/>-->
                <!--<field name="status"/>-->
                <field name="po_date"/>
                <field name="po_value"/>
                <!--<field name="capex_commitment_value"/>-->
                <!--<field name="capex_expenditure_value"/>-->
                <!--<field name="opex_value"/>-->
                <!--<field name="revenue_value"/>-->
                <!--<field name="remarks"/>-->
                <!--<field name="state"/>-->
            </tree>
        </field>
    </record>

    <!--Purchase Order Form View-->
    <record model="ir.ui.view" id="view_form_purchase_order_collection">
        <field name="name">Purchase Order Collection</field>
        <field name="model">outsource.purchase.order.collection</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <header>
                    <button
                        string="Close Purchase Order"
                        name="set2close"
                        type="object"
                        states="active,done" />
                        <!--groups="academy.group_manager,base.group_no_one"/>                    -->
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="action"
                            icon="fa-star">
                            <field string="Approvals" name="total_approval" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="action"
                            icon="fa-bars">
                            <field string="Line" name="total_po_line" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="action"
                            icon="fa-list-ul">
                            <field string="Line Details" name="total_po_line_detail" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="action"
                            icon="fa-check-square-o">
                            <field string="Claims" name="total_claim" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="action"
                            icon="fa-users">
                            <field string="Resource" name="total_resource" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="action"
                            icon="fa-user-times">
                            <field string="Non Mobilized" name="total_non_mobilize" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="po_num" class="oe_edit_only"/>
                        <h1>
                            <field name="po_num" class="oe_inline"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="contractor_id"/>
                            <field name="type"/>
                            <field name="task_num"/>
                            <!--<field name="is_renewed"/>-->
                            <!--<field name="new_po_id"/>-->
                            <field name="status"/>
                        </group>
                        <group>
                            <field name="po_date"/>
                            <field name="po_value"/>
                            <field name="capex_commitment_value"/>
                            <field name="capex_expenditure_value"/>
                            <field name="opex_value"/>
                            <field name="revenue_value"/>
                        </group>
                    </group>
                    <group>
                        <field name="remarks"/>
                    </group>
                    <notebook>
                        <page string="PO Lines">
                            <field name="po_line_ids"/>
                        </page>
                        <page string="PO Line Details">
                            <field name="po_line_detail_ids"/>
                        </page>
                        <page string="Approvals">
                            <field name="approval_ids"/>
                        </page>
                        <page string="Related POs">
                            <field name="po_ids"/>
                        </page>
                        <page string="Resources">
                            <field name="resource_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
            <!--<div class="oe_chatter">-->
                <!--<field name="message_follower_ids" widget="mail_followers"/>-->
                <!--<field name="message_ids" widget="mail_thread"/>-->
            <!--</div>-->
        </field>
    </record>
<!--END PURCHASE ORDER COLLECTION VIEWS-->

</data>
</openerp>