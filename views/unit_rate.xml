<?xml version="1.0" encoding="utf-8"?>

<openerp>
  <data>
<!--START ACTIONS-->
    <!--Unit Price Action-->
    <record model="ir.actions.act_window" id="action_unit_rate">
        <field name="name">Unit Rate</field>
        <field name="res_model">outsource.unit.rate</field>
        <field name="view_mode">pivot,tree,form</field>
        <!--<field name="context">{'search_default_group_contractor': 1}</field>-->

    </record>
<!--END ACTIONS-->

<!--START SEARCH-->
    <record model="ir.ui.view" id="search_unit_rate">
        <field name="name">Unit Rate</field>
        <field name="model">outsource.unit.rate</field>
        <field name="arch" type="xml">
            <search>
                <field name="contractor"/>
                <field name="position"/>
                <field name="level"/>
                <field name="amount"/>
                <field name="percent"/>
            </search>
        </field>
    </record>
<!--END SEARCH-->


<!--START VIEWS-->
    <!--Tree View-->
    <record model="ir.ui.view" id="view_tree_unit_rate">
        <field name="name">Unit Rate</field>
        <field name="model">outsource.unit.rate</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="contractor"/>
                <field name="position"/>
                <field name="level"/>
                <field name="amount"/>
                <field name="percent"/>
            </tree>
        </field>
    </record>

    <!--Unit Price Form View-->
    <record model="ir.ui.view" id="view_form_unit_rate">
        <field name="name">Unit Price</field>
        <field name="model">outsource.unit.rate</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="contractor"/>
                        <field name="position"/>
                        <field name="level"/>
                    </group>
                    <group>
                        <field name="amount"/>
                        <field name="percent"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--Unit Price Pivot View-->
    <record model="ir.ui.view" id="view_graph_pivot_unit_rate">
        <field name="name">Unit Price</field>
        <field name="model">outsource.unit.rate</field>
        <field name="arch" type="xml">
            <pivot type="pivot">
                <field name="contractor"/>
                <field name="level" type="col"/>
                <field name="amount" type="measure"/>
            </pivot>
        </field>
    </record>
<!--END VIEWS-->

  </data>
</openerp>