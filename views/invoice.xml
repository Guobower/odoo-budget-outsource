<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <!--START VIEWS-->
        <record model="ir.ui.view" id="view_tree_invoice">
            <field name="name">Invoice</field>
            <field name="model">outsource.invoice</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="invoice_date"/>
                    <field name="invoice_hour"/>
                    <field name="invoice_claim"/>
                    <field name="invoice_cert_amount"/>
                    <field name="resource_id"/>
                    <field name="po_line_detail_id"/>
                </tree>
            </field>
        </record>
        <!--END VIEWS-->

        <!--START ACTIONS-->
        <!--Invoice Action-->
        <record model="ir.actions.act_window" id="action_invoice">
            <field name="name">Invoice</field>
            <field name="res_model">outsource.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_tree_invoice"/>
        </record>
        <!--END ACTIONS-->
    </data>
</openerp>