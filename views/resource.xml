<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
    <!--START VIEWS-->

        <!--Resource Form View-->
        <record model="ir.ui.view" id="view_form_resource">
            <field name="name">Resource</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form name="Resources">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--<button name="toggle_active" type="object" groups="base.group_no_one" class="oe_stat_button" icon="fa-archive">-->
                            <!--<field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>-->
                            <!--</button>-->
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name"/>
                            </h1>
                            <!--<field name="is_outsource_resource" attrs="{'invisible': True}"/>-->
                        </div>
                        <group>
                            <group>
                                <field name="date_of_join"/>
                                <field name="emp_num"/>
                                <field name="agency_ref_num"/>
                            </group>
                            <group>
                                <field name="type"/>
                                <field name="type_class"/>
                                <field name="has_tool_or_uniform"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="contractor_id"/>
                            </group>
                            <group>

                            </group>
                        </group>
                        <notebook>
                            <page string="Claims">
                                <field name="claim_ids" readonly="1"/>
                            </page>
                            <page string="Position History">
                                <field name="position_history_ids">
                                    <tree editable="top">
                                        <field name="po_line_detail_id"
                                               domain="[('po_line_id.po_id.contractor_id','=',parent.contractor_id),
                                                        ('mobilize_status','!=','mobilized')]"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="status"/>
                                        <field name="remarks"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!--END VIEWS-->

        <!--Resource Tree View-->
        <record model="ir.ui.view" id="view_tree_resource">
            <field name="name">Resource</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="contractor_id"/>
                    <field name="emp_num"/>
                    <field name="name"/>
                    <field name="agency_ref_num"/>
                    <field name="date_of_join"/>
                    <field name="has_tool_or_uniform"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <!--End Resource Tree View-->

        <!--START SEARCH-->
        <record model="ir.ui.view" id="search_resource">
            <field name="name">Resource</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search>
                    <field name="contractor_id"/>
                    <field name="emp_num"/>
                    <field name="name"/>
                    <field name="agency_ref_num"/>
                    <field name="date_of_join"/>
                    <field name="has_tool_or_uniform"/>
                    <field name="state"/>
                    <filter
                        name="filter_state"
                        string="Active"
                        domain="[('state', '=', 'active')]"/>
                    <group string="Group by">
                        <filter
                            name="group_contractor"
                            string="By Contractor"
                            context="{'group_by': 'contractor_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!--END SEARCH-->

        <!--START ACTIONS-->
        <!--Resource Action-->
        <record model="ir.actions.act_window" id="action_resource">
            <field name="name">Resource</field>
            <field name="res_model">res.partner</field>
            <field name="domain">[('is_outsource_resource','=',True)]</field>
            <field name="context">{'default_is_outsource_resource': True,
                                   'search_default_filter_state': 1}</field>
            <field name="search_view_id" ref="search_resource"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_resource_view_form">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_resource"/>
            <field name="act_window_id" ref="action_resource"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_resource_view_tree">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_tree_resource"/>
            <field name="act_window_id" ref="action_resource"/>
        </record>
        <!-- End Resource Action-->
        <!--END ACTIONS-->

    </data>
</openerp>
