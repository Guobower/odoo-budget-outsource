<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!--START VIEWS-->
        <record model="ir.ui.view" id="view_tree_purchase_order">
            <field name="name">Purchase Order</field>
            <field name="model">outsource.purchase.order</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="po_num"/>
                    <field name="po_date"/>
                    <field name="po_value"/>
                    <field name="contractor"/>
                    <field name="opex_value"/>
                    <field name="revenue_value"/>
                    <field name="task_num"/>
                </tree>
            </field>
        </record>
        <!--END VIEWS-->

        <!--START ACTIONS-->
        <!--Purchase Order Action-->
        <record model="ir.actions.act_window" id="action_purchase_order">
            <field name="name">Purchase Order</field>
            <field name="res_model">outsource.purchase.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_tree_purchase_order"/>
        </record>
        <!--END ACTIONS-->
    </data>
</odoo>