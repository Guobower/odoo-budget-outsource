<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!--START VIEWS-->
        <record model="ir.ui.view" id="view_form_summary_sheet">
            <field name="name">Summary Sheet</field>
            <field name="model">outsource.summary.sheet</field>
            <field name="arch" type="xml">
                <form string="Summary Sheet">
                    <header>
                        <button string="Generate Sheet"
                                name="generate_summary_sheet"
                                type="object"
                                />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <field name="create_date" readonly="1" groups="base.group_system"/>
                            <h1>
                                <!--<field name="invoice_no" required="1" default_focus="1" placeholder="Summary Sheet No"/>-->
                            </h1>
                        </div>
                            <group>
                                <group>
                                    <field name="generator_choice"/>
                                    <field name="period_start"/>
                                    <field name="period_end"/>
                                    <field name="ramadan_start"/>
                                    <field name="ramadan_end"/>
                                </group>
                                <group>
                                    <field name="contractor"/>
                                    <field name="division"/>
                                    <field name="po_id" domain="[('contractor','=',contractor)]" options="{'no_quick_create': True, 'no_create': True}"/>
                                </group>
                            </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_tree_summary_sheet">
            <field name="name">Summary Sheet</field>
            <field name="model">outsource.summary.sheet</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="generator_choice"/>
                    <field name="po_id"/>
                    <field name="contractor"/>
                    <field name="division"/>
                    <field name="period_start"/>
                    <field name="period_end"/>
                    <field name="ramadan_start"/>
                    <field name="ramadan_end"/>
                </tree>
            </field>
        </record>
        <!--END VIEWS-->

        <!--START ACTIONS-->
        <!--Summary Sheet Action-->
        <record model="ir.actions.act_window" id="action_summary_sheet">
            <field name="name">Summary Sheet</field>
            <field name="res_model">outsource.summary.sheet</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_tree_summary_sheet"/>
        </record>
        <!--END ACTIONS-->
    </data>
</odoo>