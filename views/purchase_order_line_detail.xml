        <!--END VIEWS-->

        <!--START ACTIONS-->
        <!--Purchase Order Line Detail Action-->
        <record model="ir.actions.act_window" id="action_purchase_order_line_detail">
            <field name="name">Purchase Order Line Detail</field>
            <field name="res_model">outsource.purchase.order.line.detail</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_tree_purchase_order_line_detail"/>
        </record>
