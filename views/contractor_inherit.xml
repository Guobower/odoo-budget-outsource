<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
    <!--START CONTRACTOR VIEWS-->
        <!--CONTRACTOR FORM VIEW-->
        <record model="ir.ui.view" id="view_form_contractor_inherit">
            <field name="name">Contractor Inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="budget_contractor.view_form_contractor"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Unit Rates">
                        <field name="unit_rate_ids">
                            <tree editable="bottom">
                                <field name="position"/>
                                <field name="level_1"/>
                                <field name="level_2"/>
                                <field name="level_3"/>
                                <field name="level_4"/>
                                <field name="percent"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Approvals">
                        <field name="approval_ids"/>
                    </page>
                    <page string="Purchase Orders">
                        <field name="po_ids"/>
                    </page>
                    <page string="Resources">
                        <field name="resource_ids" context="{'form_view_ref': 'outsource.view_form_resource'}"/>
                    </page>
                    <page string="Positions">
                        <field name="po_line_detail_ids" readonly="0"/>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>